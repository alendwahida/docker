pipeline {
    agent { dockerfile true }
    stages {
        stage('Build') {
		steps {
			echo 'Build !'
		}
	}
	post {
		always {
			echo 'always !'
		}
		success {
			echo 'success !'
		}
		failure {
			echo ' Failed !'
		}
	}
	stage('Testing') {
		steps {
			echo 'Testing !'
		}
	}
	stage('Deploy') {
		steps {
			echo 'Deployed !'
		}
	}
    }
}
