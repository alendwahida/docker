pipeline {
    agent { dockerfile true }
    stages {
        stage('Build') {
		steps {
			echo 'Build !'
		}
	}
	stage('Testing') {
		steps {
			echo 'Testing !'
		}
	}
	stage('Deploy') {
		steps {
			echo 'Deployed !'
		}
	}
    }
	post {
                always {
                        echo 'always !'
                }
                success {
                        echo 'success !'
                }
                failure {
                        echo ' Failed !'
                }
        }

}
