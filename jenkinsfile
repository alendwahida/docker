pipeline {
    agent { dockerfile true }
    stages {
        stage('Build-docker') {
		steps {
			sh 'docker build -t test-aja .'
		}
	}
	stage('Test-docker') {
		steps {
			echo 'Testing !'
		}
	}
	stage('Deploy-docker') {
		steps {
			echo 'Deployed !'
		}
	}
    }
	post {
                always {
                        echo 'always !'
                }
                success {
                        echo 'success !'
                }
                failure {
                        echo ' Failed !'
                }
        }

}
